doctype html  
html   
    head        
        meta(charset='UTF-8')        
        title LGTV Channel Control - Scripts
        link(rel="icon" href="../stylesheets/favicon.ico")
        link(rel='stylesheet', href='../stylesheets/bootstrap.min.css', type='text/css' )  
        link(rel='stylesheet', href='../stylesheets/jquery-ui.css', type='text/css' )  
        script(src="../javascripts/scripteditfuncs.js")
        script(src="../javascripts/jquery-3.6.0.min.js")
        script(src="../javascripts/jquery-ui.js")
        script. 
            $( function() {
                $( "#runDTdateFld" ).datepicker();
                } 
            );
    body(style="margin-left: 5px; margin-top: 10px;")        
        main#main
        div(class="container" id="mainBtnDiv" name="mainBtnDiv")
            div(class="row justify-content-between")
                div(class="col-4")
                    h3 Batch Scripts      
                div(class="col-8" id="topBtnDiv" name="topBtnDiv" style="text-align: right;") 
                    button(type='button' id='addScriptBtn' name='addScriptBtn'
                        class='btn btn-primary btn-lg'
                        style="margin-right: 20px;" 
                        value="saveScript"
                        onClick='saveScript();') Save     
                    a(href="/scripts")
                        button(type='button' 
                            class='btn btn-primary btn-lg' 
                            value="Back to TV Select Menu") Cancel
        form(action="/scripts/save" id="scriptForm" name="scriptForm" method="POST" style="margin-top: 10px;")
            div(class="form-row")
                div(class="form-group col-8")
                    label(for="nameFld") Name
                    input(type="text" class="form-control" id="nameFld" name="nameFld" value=currentScript.name aria-describedby="nameHelp" placeholder="Unique Name")
                    small(id="nameHelp" class="form-text text-muted") Just a unique string to identify this particular script
            div(class="form-row align-items-left")
                div(class="col-sm-6 my-1")
                    label(for="runDTFld") Runtime
                    div(class="input-group")
                        input(type="text" class="form-control" style="margin-right: 6px;" id="runDTdateFld" name="runDTdateFld")
                        select(id="runDThrFld" name="runDThrFld" class="form-control")
                            option(selected) Hour...                            
                            option 01
                            option 02
                            option 03
                            option 04
                            option 05
                            option 06
                            option 07
                            option 08
                            option 09
                            option 10
                            option 11
                            option 12
                        text(class="col-form-label") :
                        select(id="runDTmnFld" name="runDTmnFld" class="form-control" style="margin-right: 6px;")
                            option(selected) Min...
                            option 00
                            option 01
                            option 02
                            option 03
                            option 04
                            option 05
                            option 06
                            option 07
                            option 08
                            option 09
                            option 10
                            option 11
                            option 12
                            option 13
                            option 14
                            option 15
                            option 16
                            option 17
                            option 18
                            option 19
                            option 20
                            option 21
                            option 22
                            option 23
                            option 24
                            option 25
                            option 26
                            option 27
                            option 28
                            option 29
                            option 30
                            option 31
                            option 32
                            option 33
                            option 34
                            option 35
                            option 36
                            option 37
                            option 38
                            option 39
                            option 40
                            option 41
                            option 42
                            option 43
                            option 44
                            option 45
                            option 46
                            option 47
                            option 48
                            option 49
                            option 50
                            option 51
                            option 52
                            option 53
                            option 54
                            option 55
                            option 56
                            option 57
                            option 58
                            option 59
                        select(id="runDTampmFld" name="runDTampmFld" class="form-control")
                            option(selected) AM
                            option PM
            input(type="hidden" id="scriptID" name="scriptID" value=currentScript.scriptID)
            input(type="hidden" id="selectedTVNums" name="selectedTVNums" value="")
            input(type="hidden" id="selectedChannelID" name="selectedChannelID" value="")
        div(class="container" style='margin-top:10px; margin-left: 0px;' id='btnDiv')    
            div(class="row")   
                div(class="col-8") 
                    each tv in tvList   
                        button(type='button' 
                            class=(scriptSelectedTVNums.includes(tv.tvNumber) ? 'btn btn-success btn-lg' : 'btn btn-primary btn-lg') 
                            style='margin-right: 30px; margin-bottom: 30px;'
                            value=tv.tvNumber
                                onClick='selectTV(this, ' + tv.tvNumber + ');') TV # #{tv.tvNumber}            
                div(class="col-4" id="channelDiv" name="channelDiv")                             
                    

